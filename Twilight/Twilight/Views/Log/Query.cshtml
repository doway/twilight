    <script src="../../Scripts/jquery-ui-timepicker-addon.js" type="text/javascript"></script>
    <script type="text/javascript">
	    $(function() {
	    $("#StartDateTime").datetimepicker({
	            showSecond: true,
	            timeFormat: 'hh:mm:ss.l',
	            ampg: true,
	            showMillisec: true,  
	            stepHour: 2,
	            stepMinute: 10,
	            stepSecond: 10	            
	        });

	        $("#EndDateTime").datetimepicker({
	            showSecond: true,
	            timeFormat: 'hh:mm:ss.l',
	            ampg: true,
	            showMillisec: true,	            
	            stepHour: 2,
	            stepMinute: 10,
	            stepSecond: 10	 
	        });

	    });


        $(document).ready(function() {
            PageContent_Init();
            if ($("#StartDateTime").val() != "" & $("#EndDateTime").val() != "") {
                search();
            }
        });
        function PageContent_Init() {
            $('#logTable tr:odd').css('background-color', '#F5FBFC');
            PostPager();
        }

        function search() {
            $.ajax({
                url: '<%= Url.Action("LogPageContent", "Log") %>',
                data: { StartDateTime: $("#StartDateTime").val(),
                    EndDateTime: $("#EndDateTime").val(),
                    LEVEL: $("#LEVEL").val(),
                    Logger: $("#Logger").val(),
                    BUID: $("#BU").val(),
                    AppName: $("#AppName").val(),
                    ErrorCode: $("#ErrorCode").val(),
                    Message: $("#Message").val(),
                    ExKey1: $("#ExKey1").val(),
                    ExKey2: $("#ExKey2").val(),
                    ExKey3: $("#ExKey3").val(),
                    ExKey4: $("#ExKey4").val(),
                    ExKey5: $("#ExKey5").val(),
                    ExKey6: $("#ExKey6").val(),
                    ExKey7: $("#ExKey7").val(),
                    ExKey8: $("#ExKey8").val(),
                    ExKey9: $("#ExKey9").val(),
                    ExKey10: $("#ExKey10").val()
                },
                type: 'post',
                async: false,
                cache: false,
                dataType: 'html',
                success: function(data) {
                    $('#PageContent').html(data);
                    PageContent_Init();
                }
            });
        }
        
        function PostPager() {
            $('.Pager').each(function(i, item) {
                $(item).attr('href', '#');
            });
            $('.PostPager.first-page').click(function() { GoToPage(1); });
            $('.PostPager.previous-page,.PostPager.next-page,.PostPager.last-page,.number-page').click(function() {
                GoToPage($(this).attr('value'));
            });
        }
        function GoToPage(page) {
            $.ajax({
            url: '<%= Url.Action("LogPageContent", "Log") %>',
                data: { page: page, StartDateTime: $("#StartDateTime").val(),
                    EndDateTime: $("#EndDateTime").val(),
                    LEVEL: $("#LEVEL").val(),
                    Logger: $("#Logger").val(),
                    BUID: $("#BU").val(),
                    AppName: $("#AppName").val(),
                    ErrorCode: $("#ErrorCode").val(),
                    Message: $("#Message").val(),
                    ExKey1: $("#ExKey1").val(),
                    ExKey2: $("#ExKey2").val(),
                    ExKey3: $("#ExKey3").val(),
                    ExKey4: $("#ExKey4").val(),
                    ExKey5: $("#ExKey5").val(),
                    ExKey6: $("#ExKey6").val(),
                    ExKey7: $("#ExKey7").val(),
                    ExKey8: $("#ExKey8").val(),
                    ExKey9: $("#ExKey9").val(),
                    ExKey10: $("#ExKey10").val()
                },
                type: 'post',
                async: false,
                cache: false,
                dataType: 'html',
                success: function(data) {
                    $('#PageContent').html(data);
                    PageContent_Init();
                }
            });
        }

        function Export() {

            document.forms[0].action = '<%= Url.Action("FileExport", "Log") %>';
            document.forms[0].submit();
        }
	</script>
